###############################################################################
# Auto detect text files and perform LF normalization
###############################################################################
* text=auto

###############################################################################
# Explicitly declare CRLF normalization for the following files
###############################################################################

# Header Files
*.h				text eol=crlf
*.hpp			text eol=crlf
*.inc			text eol=crlf
*.inl			text eol=crlf
*.tpp			text eol=crlf

# Source Files
*.c				text eol=crlf
*.cc			text eol=crlf
*.cpp			text eol=crlf

# Shader Files
*.hlsl			text eol=crlf
*.hlsli			text eol=crlf

# Resource Files
*.rc        	text eol=crlf

# Visual Studio
*.filters		text eol=crlf
*.props			text eol=crlf
*.sln			text eol=crlf
*.users			text eol=crlf
*.vcxproj		text eol=crlf

###############################################################################
# Explicitly declare programming languages for the following files
###############################################################################

# Header Files
*.hpp 			linguist-language=C++
*.tpp 			linguist-language=C++

DirectXTex/*.h 	linguist-language=C++
fmt/*.h 		linguist-language=C++
GSL/*.h 		linguist-language=C++
ImGui/*.h 		linguist-language=C++
zlib/*.h 		linguist-language=C

# Source Files
*.c 			linguist-language=C
*.cc 			linguist-language=C++
*.cpp 			linguist-language=C++

# Shader Files
*.hlsl 			linguist-language=HLSL
*.hlsli 		linguist-language=HLSL
